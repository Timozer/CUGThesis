\NeedsTeXFormat{LaTeX2e}[1994/06/01]
\ProvidesPackage{ttools}[2018/03/16 Some Useful Tools]

\RequirePackage{etoolbox}
\RequirePackage{xcolor}
\RequirePackage{float}

\NewDocumentCommand{\tilcode}{m}{\colorbox{lightgray!50}{\ttfamily\small #1}}
\NewDocumentCommand{\cmd}{m}{\texttt{\small $\backslash$#1}}
\NewDocumentCommand{\email}{m}{\texttt{\small $\backslash$#1}}

\NewDocumentEnvironment{ttab}{m m}{%
    \begin{table}[htbp]
        \centering
        \caption{#1}
        \label{#2}
    }{%
    \end{table}
}
\NewDocumentEnvironment{Ttab}{m m}{%
    \begin{table}[H]
        \centering
        \caption{#1}
        \label{#2}
    }{%
    \end{table}
}
\NewDocumentEnvironment{tfig}{m m}{%
    \begin{figure}[htbp]
        \centering 
    }{%
        \caption{#1}
        \label{#2}
    \end{figure}
}
\NewDocumentEnvironment{Tfig}{m m}{%
    \begin{figure}[H]
        \centering 
    }{%
        \caption{#1}
        \label{#2}
    \end{figure}
}

% for poems 
\NewDocumentEnvironment{tpoem}{m m}{%
    \vskip.8ex
    \begin{center}
        \begin{minipage}{.65\textwidth}
            \small \sffamily
}{%
        \rightline{------~#1《~#2~》}
        \end{minipage}
    \end{center}
    \vskip.7ex
}

\makeatletter
\def\tagform@#1{\maketag@@@{(\ignorespaces#1\@@italiccorr)}}
\makeatother

\AtBeginDocument{%
    \let\oldref\ref%
    \renewcommand{\ref}[1]{\hskip0.25em\oldref{#1}\hskip0.25em}
}
\endinput
